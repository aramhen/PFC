<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

	<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basename" value="messages" />
	</bean>

	<!-- Scans the classpath of this application for @Components to deploy as beans -->
	<context:component-scan base-package="com.university.equationsapp.web" />

	<!-- Esto me permite usar los mensajes de validación personalizados, debo indicarlos por anotacion en 
		los campos del bean asociado a la jsp y los busca luego en el messages.properties -->
	<bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean">
		<property name="validationMessageSource" ref="messageSource" />
	</bean>

	<!-- Configures the @Controller programming model ARH TODO he añadido validator="validator" para la 
		validacion para indcarle que use el bean validator creado arriba -->
	<mvc:annotation-driven validator="validator" />

	<!-- ARH TODO revisar comentarios Evita que tengamos que poner en el controlador la ruta a las jsps, 
		el la pone con este prefijo y ademas añade de sufijo el .jsp, así sólo hay que poner el nombre de las 
		jsps -->
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView"></property>
		<property name="prefix" value="/WEB-INF/views/"></property>
		<property name="suffix" value=".jsp"></property>
	</bean>

</beans>
